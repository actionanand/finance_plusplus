<%- model_class = Image -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<% if @image.user_id == current_user.id %>
  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
    <dd><%= @image.name %></dd>
    <dt></dt>
    <dd><%= image_tag(@image.picture.url, size: "300x300") if @image.picture? %></dd>
  </dl>
  
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_image_path(@image), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                image_path(@image),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
<% else %>
  <div>
    <span class="label label-primary">
      You don't have permission to view this. Kindly contact corresponding user
    </span>
  </div>
<% end %>

<%= link_to t('.back', :default => t("helpers.links.back")),
                images_path, :class => 'btn btn-default'  %>



