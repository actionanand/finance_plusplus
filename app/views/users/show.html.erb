<h2>User Profile</h2>
<dl class="dl-horizontal">
  <dt><strong>Name: </strong></dt>
  <dd><%= @user.full_name.capitalize %></dd>
  <dt><strong>Email: </strong></dt>
  <dd><%= @user.email %></dd>
</dl>

<% if @user.stocks.size > 0 %>
  <%= render 'stocks/list'%>
<% else %>
  <p class="lead"><%= @user.full_name.capitalize %> is not tracking any stocks</p>
<% end %>

<%= link_to my_friends_path do %>
  <i class="glyphicon glyphicon-circle-arrow-left"></i> Back
<% end %>